@model List<Skill>
@{
	ViewData["Title"] = "SkillList";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}

<h1>Yetenek Listesi</h1>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yetenekler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenek Listesi</div>
					</div>
					<div class="card-body">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Derece</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.SkillValue</td>
										<td><a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Skill/UpdateSkill/@item.SkillID" class="btn btn-outline-success">Güncelle</a></td>

									</tr>
								}
							</tbody>
						</table>
						<a href="/Skill/AddSkill/" class="btn btn-outline-info">Yeni Yetenek Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>