@model Testimonial
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}

<h1>Referans Ekleme Sayfası</h1>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referanslar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yeni Referans Bilgisi Ekleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="TestimonialID" />
                            <label> Ad Soyad</label>
                            <input type="text" asp-for="Fullname" class="form-control" />
                            <br />
                            <label> Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <input type="text" asp-for="Description" class="form-control" />
                            <br />
                            <label>Resim Yolu</label>
                            <textarea rows="4" class="form-control" asp-for="ImageUrl"></textarea>
                            <br />
                            <button class="btn btn-outline-primary">Referans Bilgisini Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
