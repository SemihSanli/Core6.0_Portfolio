@model Experience
@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}

<h1>Deneyim Güncelleme Sayfası</h1>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Deneyim Ekleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ExperienceID" />
                            <label> Firma Bilgisi</label>
                            <input type="text" asp-for="Header" class="form-control" />
                            <br />
                            <label>Çalışılan Pozisyon</label>
                            <input type="text" asp-for="PersonTitle" class="form-control" />
                            <br />
                            <textarea rows="4" class="form-control" asp-for="Description"></textarea>
                            <label>Tarih Aralığı</label>
                            <input type="text" asp-for="Date" class="form-control" />
                            <br />
                            <button class="btn btn-outline-success">Deneyimi Güncelle</button>
                        </form>



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

