@model List<Portfolio>
@{
	ViewData["Title"] = "PortfolioList";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}

<h1>PortfolioList</h1>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Portfolyo</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Portfolyo Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Portfolyo İle  İlgili Proje İşlemleri Aşağıdaki Panelden Yararlanarak Yapabilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Alt Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.SubTitle</td>
										<td>@item.Description</td>
										<td><a href="/Portfolio/DeletePortfolio/@item.PortfolioID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioID" class="btn btn-outline-success">Güncelle</a></td>

									</tr>
								}
							</tbody>
						</table>
						<a href="/Portfolio/AddPortfolio/" class="btn btn-outline-info">Yeni Proje Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>