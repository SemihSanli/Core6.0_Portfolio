@model SocialMedia
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Layout/Index.cshtml";
}

<h1>Sosyal Medya Güncelleme Sayfası</h1>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medya Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="SocialMediaID" />
                            <label> Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label> İkon</label>
                            <input type="text" asp-for="Icon" class="form-control" />
                            <br />
                            <label>Bağlantı Adresi</label>
                            <input type="text" asp-for="Url" class="form-control" />
                            <br />
                            <button class="btn btn-outline-success">Sosyal Medya Bilgilerini Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>