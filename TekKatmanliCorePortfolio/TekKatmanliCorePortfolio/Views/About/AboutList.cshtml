@model List<About>
@{
	ViewData["Title"] = "AboutList";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}

<h1>Hakkımda Listesi</h1>


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımda Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımda İle  İlgili İşlemleri Aşağıdaki Panelden Yararlanarak Yapabilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Detay</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.SubDescription</td>
										<td>@item.Details</td>
										<td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-success">Güncelle</a></td>

									</tr>
								}
							</tbody>
						</table>
						<a href="/About/AddAbout/" class="btn btn-outline-info">Yeni Deneyim Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>